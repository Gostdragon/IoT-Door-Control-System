<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
        app:key="@string/fragment_preferences_connection_key"
        app:title="@string/fragment_preferences_connection_title">

        <EditTextPreference
            android:defaultValue="@string/fragment_preferences_hostname_default_value"
            app:key="@string/fragment_preferences_hostname_key"
            app:title="@string/fragment_preferences_hostname_title"
            app:useSimpleSummaryProvider="true" />

        <EditTextPreference
            android:defaultValue="@string/fragment_preferences_port_default_value"
            app:key="@string/fragment_preferences_port_key"
            app:title="@string/fragment_preferences_port_title"
            app:useSimpleSummaryProvider="true" />

        <EditTextPreference
            android:defaultValue="@string/fragment_preferences_timeout_default_value"
            app:key="@string/fragment_preferences_timeout_key"
            app:title="@string/fragment_preferences_timeout_title"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>

</PreferenceScreen>